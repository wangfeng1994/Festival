<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/sms_item"
              android:orientation="vertical">

    <TextView android:id="@+id/tv_mag_content" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
    />

    <Button
        android:id="@+id/btn_to_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:drawableLeft="@drawable/icon_to_send"
        android:minHeight="0dp"
        android:minWidth="0dp" android:text="发送"/>

</LinearLayout>